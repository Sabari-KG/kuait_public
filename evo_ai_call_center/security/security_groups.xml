<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.module.category" id="module_category_administration_callcenter">
        <field name="name">AI call center</field>
        <field name="parent_id" ref="base.module_category_administration"/>
        <field name="sequence">50</field>
    </record>

    <record id="group_call_center_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_administration_callcenter"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_call_center_admin" model="res.groups">
        <field name="name">Administrator</field>
        <field name="category_id" ref="module_category_administration_callcenter"/>
        <field name="implied_ids" eval="[(4, ref('group_call_center_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>
</odoo>
