<odoo>

    <record id="evo_call_analysis_view_form" model="ir.ui.view">
        <field name="name">evo.call.analysis.form</field>
        <field name="model">evo.call.analysis</field>
        <field name="arch" type="xml">
            <form string="Calls">
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="call_id" readonly="1"/>
                        <field name="analysis_type" readonly="1"/>
                        <field name="value" readonly="1"/>
                        <field name="rationale" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="evo_call_analysis_view_tree" model="ir.ui.view">
        <field name="name">evo.call.analysis.tree</field>
        <field name="model">evo.call.analysis</field>
        <field name="arch" type="xml">
            <tree decoration-danger="value == 'failure'" decoration-success="value == 'success'">
                <field name="name"/>
                <field name="call_id"/>
                <field name="analysis_type"/>
                <field name="value"/>
            </tree>
        </field>
    </record>
    <record id="evo_call_analysis_view_search" model="ir.ui.view">
        <field name="name">evo.call.analysis.search</field>
        <field name="model">evo.call.analysis</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

</odoo>
