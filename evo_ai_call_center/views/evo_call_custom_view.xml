<odoo>
    <record id="evo_call_custom_view_form" model="ir.ui.view">
        <field name="name">evo.call.custom.form</field>
        <field name="model">evo.call.custom</field>
        <field name="arch" type="xml">
            <form string="Call custom">
                <sheet>
                    <field name="model" invisible="1"/>
                    <group>
                         <group>
                            <field name="name" string="Related record name"/>
                            <field name="model_id" required="1"/>
                         </group>
                         <group>
                            <field name="related_field_id" required="1"/>
                            <field name="domain_related" widget="domain" options="{'model': 'model', 'in_dialog': True}"/>
                        </group>
                         <field name="custom_related_ids" mode="tree">
                            <tree limit="200" editable="bottom">
                                <control>
                                    <create name="add_product_control" string="Add line"/>
                                </control>
                                <field name="model" column_invisible="True"/>
                                <field name="sequence" widget="handle"/>
                                <field name="name"/>
                                <field name="field_char" widget="DynamicModelFieldSelectorChar" options="{'model': 'model'}" class="oe_inline"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="evo_call_custom_view_tree" model="ir.ui.view">
        <field name="name">evo.call.custom.tree</field>
        <field name="model">evo.call.custom</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="campaign_id"/>
                <field name="sequence"/>
                <field name="field_id"/>
            </tree>
        </field>
    </record>
</odoo>
